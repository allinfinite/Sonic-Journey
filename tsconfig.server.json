{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-server",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "../src/*": ["src/*"]
    }
  },
  "include": ["server/**/*.ts", "src/types/**/*.ts"],
  "exclude": ["node_modules"]
}
